      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "source ~/.cache/pypoetry/virtualenvs/romm-TjwgbYlf-py3.11/bin/activate; cd backend; pytest -v",
      "label": "Execute tests [pytest]",
      "problemMatcher": []
    },
    {
